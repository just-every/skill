{
  "name": "@just-every/skill",
  "version": "0.2.0",
  "description": "Skill catalog platform and starter kit installer for CLI apps",
  "type": "module",
  "bin": {
    "every-skill": "./src/cli.js"
  },
  "files": [
    "src",
    "skills",
    "templates",
    "README.md"
  ],
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "workers/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node ./scripts/sync-fontawesome-token.mjs",
    "dev:worker": "./scripts/dev-worker.sh",
    "dev:worker:local": "JE_LOCAL_URLS=1 ./scripts/dev-worker.sh",
    "dev:local": "JE_LOCAL_URLS=1 ./scripts/dev-web.sh",
    "dev": "sh -c 'npm run dev:worker & npm run dev:local'",
    "build": "npm run build --workspaces --if-present",
    "lint": "echo 'No linting configured yet.'",
    "format": "echo 'No formatter configured yet.'",
    "bootstrap:preflight": "pnpm --filter @justevery/bootstrap-cli preflight",
    "bootstrap:env": "pnpm --filter @justevery/bootstrap-cli env:generate",
    "bootstrap:apply": "pnpm --filter @justevery/bootstrap-cli apply",
    "bootstrap:deploy": "pnpm --filter @justevery/bootstrap-cli run deploy",
    "bootstrap:deploy:dry-run": "pnpm --filter @justevery/bootstrap-cli run deploy --dry-run",
    "runner:dev": "node packages/design-runner/server.mjs",
    "publish:env-blob": "bash scripts/publish-env-blob.sh",
    "bootstrap:deploy:new": "pnpm bootstrap:deploy && pnpm publish:env-blob",
    "bootstrap:smoke": "pnpm --filter @justevery/bootstrap-cli run smoke",
    "smoke": "pnpm bootstrap:smoke",
    "smoke:client": "node ./scripts/smoke-client-script.cjs",
    "smoke:local": "node scripts/smoke-local.cjs",
    "skills:import": "node scripts/import-curated-skills.mjs",
    "skills:benchmark": "node scripts/benchmark-skills.mjs --mode daytona",
    "skills:demo": "node scripts/demo-skill-retrieval.mjs",
    "audit:deploy-env": "node scripts/audit-deploy-env.mjs",
    "validate:bootstrap": "pnpm bootstrap:preflight -- --check && pnpm bootstrap:env -- --check",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "version:packages": "echo 'No version bump required'",
    "release:dry-run": "echo 'Release dry-run skipped'"
  },
  "engines": {
    "node": ">=18.18"
  },
  "devDependencies": {
    "@just-every/code-bridge": "^0.1.5",
    "@playwright/test": "^1.57.0",
    "wrangler": "^4.51.0"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "1.30.2",
      "vite": "6.0.11"
    },
    "patchedDependencies": {
      "@just-every/code-bridge@0.1.5": "patches/@just-every__code-bridge@0.1.5.patch",
      "@fortawesome/react-native-fontawesome@0.3.2": "patches/@fortawesome__react-native-fontawesome@0.3.2.patch"
    }
  }
}
