{
  "name": "@justevery/stack",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "workers/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "dev:worker": "npm run dev --workspace workers/api",
    "build": "npm run build --workspaces",
    "lint": "echo 'No linting configured yet.'",
    "format": "echo 'No formatter configured yet.'",
    "bootstrap:preflight": "pnpm --filter @justevery/bootstrap-cli preflight",
    "bootstrap:env": "pnpm --filter @justevery/bootstrap-cli env:generate",
    "bootstrap:apply": "pnpm --filter @justevery/bootstrap-cli apply",
    "bootstrap:deploy": "pnpm --filter @justevery/bootstrap-cli run deploy",
    "bootstrap:deploy:dry-run": "pnpm --filter @justevery/bootstrap-cli run deploy -- --dry-run",
    "publish:env-blob": "bash scripts/publish-env-blob.sh",
    "bootstrap:deploy:new": "pnpm bootstrap:deploy && pnpm publish:env-blob",
    "bootstrap:smoke": "pnpm --filter @justevery/bootstrap-cli run smoke",
    "smoke": "pnpm bootstrap:smoke",
    "smoke:local": "node scripts/smoke-local.cjs",
    "validate:bootstrap": "pnpm bootstrap:preflight -- --check && pnpm bootstrap:env -- --check",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "version:packages": "echo 'No version bump required'",
    "release:dry-run": "echo 'Release dry-run skipped'"
  },
  "engines": {
    "node": ">=18.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "wrangler": "^4.45.3"
  }
}
