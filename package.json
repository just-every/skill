{
  "name": "@justevery/stack",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "workers/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "dev:worker": "npm run dev --workspace workers/api",
    "build": "npm run build --workspaces",
    "lint": "echo 'No linting configured yet.'",
    "format": "echo 'No formatter configured yet.'",
    "smoke": "node scripts/smoke-check.cjs",
    "smoke:screens": "node scripts/smoke-screens.cjs",
    "validate:bootstrap": "node scripts/bootstrap-validate.cjs",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "deploy:worker": "node scripts/deploy-worker.cjs",
    "assert:secrets": "node scripts/assert-secrets.cjs",
    "assert:r2": "node scripts/assert-cloudflare-scopes.cjs",
    "token:logto": "node scripts/fetch-logto-token.cjs"
  },
  "engines": {
    "node": ">=18.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "wrangler": "^4.45.3"
  }
}
