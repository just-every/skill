{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@justevery/ui/*": ["packages/ui/src/*"],
      "@justevery/config/*": ["packages/config/src/*"]
    }
  },
  "include": []
}
